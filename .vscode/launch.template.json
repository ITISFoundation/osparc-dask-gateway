  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Run Test",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": [
        "-sx",
        "--log-cli-level=INFO",
        "--ff",
        "--keep-docker-up",
        "--setup-show",
        "${file}"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": false,
      "python": "${workspaceFolder}/gateway/.venv/bin/python3",
    },
    {
      "name": "Python: Module",
      "type": "python",
      "request": "launch",
      "module": "osparc_dask_gateway",
      "args": [
        "-f",
        "config/config.py"
      ],
      "cwd": "${workspaceFolder}",
      "python": "${workspaceFolder}/.venv/bin/python3",
      "justMyCode": false
    },
    {
      "name": "Pytest",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": [
        "${workspaceFolder}/gateway/tests/test_integration.py::test_cluster_start_stop"
      ],
      "python": "${workspaceFolder}/gateway/.venv/bin/python3",
      "justMyCode": false
    }
  ]
}